{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    },
    {
      "name": "develop-claude",
      "prerelease": "beta"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": false },
          { "type": "ci", "release": false },
          { "type": "chore", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "perf", "section": "âš¡ï¸ Performance Improvements" },
            { "type": "revert", "section": "âªï¸ Reverts" },
            { "type": "docs", "section": "ğŸ“ Documentation", "hidden": true },
            { "type": "style", "section": "ğŸ¨ Styles", "hidden": true },
            { "type": "refactor", "section": "ğŸ”§ Code Refactoring" },
            { "type": "test", "section": "âœ… Tests", "hidden": true },
            { "type": "build", "section": "ğŸ“¦ Build System", "hidden": true },
            { "type": "ci", "section": "ğŸ‘· CI", "hidden": true },
            { "type": "chore", "section": "ğŸ”¨ Chores", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
